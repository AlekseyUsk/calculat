<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:background="@drawable/ic_android_black_24dp">


    <Button
        android:id="@+id/one"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:text="1"
        android:textSize="@dimen/button_size" />

    <Button
        android:id="@+id/twoo"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:text="2"
        android:textSize="@dimen/button_size" />

    <Button
        android:id="@+id/three"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:text="3"
        android:textSize="@dimen/button_size" />

    <Button
        android:id="@+id/division"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:backgroundTint="#66cc66"
        android:text="/"
        android:textSize="@dimen/button_size" />

    <Button
        android:id="@+id/four"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:text="4"
        android:textSize="@dimen/button_size" />

    <Button
        android:id="@+id/five"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:text="5"
        android:textSize="@dimen/button_size" />

    <Button
        android:id="@+id/six"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:text="6"
        android:textSize="@dimen/button_size" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:backgroundTint="#66cc66"
        android:text="*"
        android:textSize="@dimen/button_size" />

    <Button
        android:id="@+id/seven"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:text="7"
        android:textSize="@dimen/button_size" />

    <Button
        android:id="@+id/eight"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:text="8"
        android:textSize="@dimen/button_size" />

    <Button
        android:id="@+id/nine"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:text="9"
        android:textSize="@dimen/button_size" />

    <Button
        android:id="@+id/sum"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:backgroundTint="#66cc66"
        android:text="+"
        android:textSize="@dimen/button_size" />

    <Button
        android:id="@+id/zero"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:text="0"
        android:textSize="@dimen/button_size" />


    <Button
        android:id="@+id/result"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:backgroundTint="#cc0000"
        android:text="="
        android:textSize="@dimen/button_size" />

    <Button
        android:id="@+id/cha"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:backgroundTint="#66cc66"
        android:text=","
        android:textSize="@dimen/button_size" />


    <Button
        android:id="@+id/min"
        android:layout_width="@dimen/default_button"
        android:layout_height="@dimen/default_button"
        android:layout_margin="10dp"
        android:backgroundTint="#66cc66"
        android:text="-"
        android:textSize="@dimen/button_size" />

</GridLayout>