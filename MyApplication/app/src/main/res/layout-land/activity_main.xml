<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@drawable/ic_android_black_24dp"
    android:columnCount="8"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:paddingRight="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="8"
        android:layout_gravity="fill_horizontal"
        android:hint="Result"
        android:textSize="@dimen/textSize" />


    <Button
        android:id="@+id/one"
        style="@style/ButtonCalc"
        android:text="@string/key_1" />

    <Button
        android:id="@+id/two"
        style="@style/ButtonCalc"
        android:text="@string/key_2" />

    <Button
        android:id="@+id/three"
        style="@style/ButtonCalc"
        android:text="@string/key_3" />


    <Button
        android:id="@+id/four"
        style="@style/ButtonCalc"
        android:text="@string/key_4" />

    <Button
        android:id="@+id/five"
        style="@style/ButtonCalc"
        android:text="@string/key_5" />

    <Button
        android:id="@+id/six"
        style="@style/ButtonCalc"
        android:text="@string/key_6" />


    <Button
        android:id="@+id/seven"
        style="@style/ButtonCalc"
        android:text="@string/key_7" />

    <Button
        android:id="@+id/eight"
        style="@style/ButtonCalc"
        android:text="@string/key_8" />

    <Button
        android:id="@+id/nine"
        style="@style/ButtonCalc"
        android:text="@string/key_9" />

    <Button
        android:id="@+id/zero"
        style="@style/ButtonCalc"
        android:text="@string/key_0" />


    <Button
        android:id="@+id/sum"
        style="@style/ButtonCalcAction"
        android:text="@string/key_plus" />

    <Button
        android:id="@+id/min"
        style="@style/ButtonCalcAction"
        android:text="@string/key_min" />


    <Button
        android:id="@+id/division"
        style="@style/ButtonCalcAction"
        android:text="/" />


    <Button
        android:id="@+id/multiply"
        style="@style/ButtonCalcAction"
        android:text="@string/key_mult" />

    <Button
        android:id="@+id/cha"
        style="@style/ButtonCalcAction"
        android:text="@string/key_cha" />


    <Button
        android:id="@+id/del"
        style="@style/ButtonCalcAction"
        android:text="@string/key_del" />


    <Button
        android:paddingTop="0dp"
        android:id="@+id/result"
        android:layout_width="@dimen/defaultButton"
        android:layout_height="50dp"
        android:layout_columnSpan="8"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:backgroundTint="#cc0000"
        android:text="@string/key_res"
        android:textSize="@dimen/buttonSize" />


</GridLayout>